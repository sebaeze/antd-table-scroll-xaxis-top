{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "removeComments": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "sourceMap": false,
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src", "jest.config.ts", "webpack.config.ts", "script", "playwright.config.ts"]
}
